{
  "extends": "expo/tsconfig.base",
  "include": ["**/*.tsx", "app/src/react-app-env.d.ts"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "strict": true,
    "typeRoots": ["./src/types"],
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["app/assets/*"],
      "@screens/*": ["app/screens/*"],
      "@config/*": ["app/config/*"],
      "@components/*": ["app/components/*"],
      "@env": ["node_modules/react-native-dotenv/*"]
    }
  }
}
