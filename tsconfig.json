{
  "extends": "expo/tsconfig.base",
  "include": ["**/*.tsx", "app/src/react-app-env.d.ts"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": "./app",
    "paths": {
      "@assets/*": ["assets/*"],
      "@screens/*": ["screens/*"],
      "@config/*": ["config/*"],
      "@components/*": ["components/*"]
    }
  }
}
